<!DOCTYPE html>
<meta charset="utf-8">
<link rel="stylesheet" href="/css/bootstrap.min.css">
<link href='http://fonts.googleapis.com/css?family=Roboto:100|Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
<style>
  body {
    font-family: "Open Sans", sans-serif;
  }

  .logo {
    padding: 15px;
  }

  .today {
    text-align: right;
    padding: 20px 25px 0 0;
    color: #657579;
  }

  .today .hello {
    font-size: 30px;
    font-weight: 100;
  }

  .middle {
    height: 400px;
  }

  .weather {
    background: url("/images/melbourne_weather.jpg") no-repeat center center;
    height: 100%;
    color: white;
    padding: 35px 35px 0 35px;
  }

  .temperature {
    position: absolute;
    bottom: 0;
    left: -10px;
    font-family: "Roboto", sans-serif;
    font-size: 130px;
    line-height: 130px;
    font-weight: 100;
  }

  .weather .weather-top {
    position: relative;
    height: 305px;
    border-bottom: 1px solid white;
  }

  .weather .icon {
    position: absolute;
    bottom: 8px;
    right: 0;
  }

  .weather .weather-message {
    font-size: 16px;
    line-height: 60px;
  }

  .map {
    background: url("/images/mockup_map.png") no-repeat center center;
    height: 100%;
  }

  h1 {
    margin: 0;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 16px;
    line-height: 40px;
    color: white;
    text-align: center;
  }

  .events.widget h1,
  .train.widget h1 {
    background-color: #3e5257;
  }

  .pedestrian.widget h1,
  .twitter.widget h1 {
    background-color: #657579;
  }

  .widget {
    height: 430px;
    border-right: 1px solid #dfdfdf;
    border-bottom: 1px solid #dfdfdf;
  }

  .widget:last-child {
    border-right: none;
  }

  .events .empty {
    text-align: center;
    font-size: 20px;
    padding: 30px;
  }

  .event {
    padding: 20px 30px;
    border-bottom: 1px solid #dfdfdf;
  }

  .events-list {
    overflow: scroll;
    height: 390px;
  }

  .event:last-child {
    border-bottom: none;
  }

  .events .event-name {
    font-size: 16px;
    line-height: 24px;
  }

  .events .link {
    font-size: 13px;
    color: #78c19e;
    text-transform: uppercase;
  }
</style>
<body>
<script src="/vendor/react/react-with-addons.js"></script>
<script src="/vendor/react/JSXTransformer.js"></script>
<script src="/vendor/d3/d3.js"></script>
<script type="text/jsx" src="/src/app.js"></script>
