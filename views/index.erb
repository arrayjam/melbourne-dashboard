<link rel="stylesheet" href="/css/bootstrap.min.css">
<link href='http://fonts.googleapis.com/css?family=Roboto:100|Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
<style>
  body {
    font-family: "Open Sans", sans-serif;
  }

  .logo {
    padding: 15px;
  }

  .today {
    text-align: right;
    padding: 20px 25px 0 0;
    color: #657579;
  }

  .today .hello {
    font-size: 30px;
    font-weight: 100;
  }

  .middle {
    height: 400px;
  }

  .weather {
    background: url("/images/melbourne_weather.jpg") no-repeat center center;
    height: 100%;
    color: white;
    padding: 35px 35px 0 35px;
  }

  .temperature {
    position: absolute;
    bottom: 0;
    left: -10px;
    font-family: "Roboto", sans-serif;
    font-size: 130px;
    line-height: 130px;
    font-weight: 100;
  }

  .weather .weather-top {
    position: relative;
    height: 305px;
    border-bottom: 1px solid white;
  }

  .weather .icon {
    position: absolute;
    bottom: 8px;
    right: 0;
  }

  .weather .weather-message {
    font-size: 16px;
    line-height: 60px;
  }

  .map {
    background: url("/images/mockup_map.png") no-repeat center center;
    height: 100%;
  }

  h1 {
    margin: 0;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 16px;
    line-height: 40px;
    color: white;
    text-align: center;
  }

  .events.widget h1,
  .train.widget h1 {
    background-color: #3e5257;
  }

  .pedestrians.widget h1,
  .twitter.widget h1 {
    background-color: #657579;
  }

  .widget {
    height: 430px;
    border-bottom: 1px solid #dfdfdf;
  }

  .widget:last-child {
    border-right: none;
  }

  .empty {
    text-align: center;
    font-size: 20px;
    padding: 30px;
  }

  .event {
    padding: 20px 30px;
    border-bottom: 1px solid #dfdfdf;
  }

  .widget .widget-body {
    overflow: scroll;
    height: 390px;
    border-right: 1px solid #dfdfdf;
    position: relative;
  }

  .event:last-child {
    border-bottom: none;
  }

  .events .event-name {
    font-size: 16px;
    line-height: 24px;
  }

  .fat-link {
    font-size: 13px;
    color: #78c19e;
    text-transform: uppercase;
    font-weight: bold;
  }

  .pedestrians .widget-body {
    padding: 30px;
  }

  .pedestrians .pedestrians-graph {
    width: 60px;
  }

  .pedestrians .pedestrians-graph-label {
    font-size: 13px;
    line-height: 25px;
    color: black;
    font-weight: bold;
    text-transform: uppercase;
    text-align: center;
  }

  .pedestrians .pedestrians-graph .guage {
    height: 300px;
    position: relative;
    background-color: #e3e3e3;
    border-radius: 10px;
  }

  .pedestrians .pedestrians-graph .guage-fill {
    background-color: #46c9e0;
    position: absolute;
    bottom: 0;
    width: 100%;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
  }

  .pedestrians .busy {
    position: absolute;
    left: 130px;
    right: 20px;
    font-size: 25px;
    font-weight: 200;
  }

  .pedestrians .links {
    position: absolute;
    left: 130px;
    bottom: 30px;
  }

  .train .directionButtons {
    width: 280px;
    margin: 130px auto 30px;
    text-align: center;
  }

  .train .directionButton {
    display: inline-block;
    width: 140px;
    padding: 7px 0;
    margin: 0;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 16px;
    line-height: 40px;
    color: white;
    text-align: center;
    background-color: #e3e3e3;
    cursor: pointer;
  }

  .train .directionButton.downtown {
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
  }

  .train .directionButton.uptown {
    border-top-right-radius: 20px;
    border-bottom-right-radius: 20px;
  }

  .train .directionButton.active {
    background-color: #657579;
  }

  .train form {
    width: 280px;
    margin: 0 auto;
  }

  .train input {
    width: 100%;
  }
